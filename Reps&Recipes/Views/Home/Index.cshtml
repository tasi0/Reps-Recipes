@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "He";
}

<div class="container cool-margin">
    <div class="text-center">
        @if (!SignInManager.IsSignedIn(User))
        {
            <h1 class="display-4">Welcome to Reps_Recipes</h1>
        }
        else
        {
            <h1 class="display-4">Здравей, лайнар</h1>
        }


        @if (!SignInManager.IsSignedIn(User))
        {
            <p class="lead">
                Your ultimate fitness companion for workouts and meal plans.
            </p>
        }

        @* <p> *@
        @*     Browse tailored workout plans for all fitness levels, from beginner to advanced. *@
        @* </p> *@
        @* <p> *@
        @*     Discover meal plans that fuel your fitness goals—whether it’s bulking, cutting, or maintaining. *@
        @* </p> *@
        @if (!SignInManager.IsSignedIn(User))
        {
            <a class="btn btn-lg mt-3 started-btn" href="Identity/Account/Register">Get Started</a>
        }

    </div>
</div>
